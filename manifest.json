{
  "manifest_version": 2,
  "name": "Crypto Currency Price Ticker",
  "short_name": "CCPT",
  "version": "1.0.1",
  "description": "Crypto Currency Price Ticker",
  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg",
    "48": "icons/icon.svg",
    "64": "icons/icon.svg",
    "128": "icons/icon.svg"
  },

  "browser_action": {
    "default_icon": "icons/icon.svg",
    "default_title": "Crypto Currency Price Ticker",
    "browser_style": true,
    "default_popup": "popup/choose_symbol.html"
  },

  "background": {
    "scripts": [
      "src/background.js"
    ]
  },

  "permissions": [
    "storage",
    "tabs",
    "https://api.huobi.pro/market/detail"
  ],

  "options_ui": {
    "page": "options/options.html",
    "chrome_style": false
  },

  "default_locale": "en_US",

  "applications": {
    "gecko": {
      "id": "wangsai.silence@qq.com"
    }
  }
}